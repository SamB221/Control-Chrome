{
  "manifest_version": 3,
  "name": "Control for Reddit",
  "version": "1.3.1",
  "description": "Lets you take control of your time by limiting reddit features",
  "permissions": [
    "storage"
  ],
  "host_permissions": ["*://*.reddit.com/*"],
  
  "icons": {
    "128": "icons/control_simple.png"
  },
  
  "options_ui" : {
    "page": "options.html",
    "open_in_tab": true
  },
  
  "action": {
    "default_popup": "popup.html"
  },
  
  "content_scripts": [{
    "matches": ["*://*.reddit.com/*"],
    "js": ["js/control.js"],
    "run_at": "document_start"
  }]
}